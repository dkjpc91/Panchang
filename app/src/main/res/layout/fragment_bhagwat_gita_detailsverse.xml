<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".UI.Fragments.BhagwatGitaDetailsverseFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sharegita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="19dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/forward"
        app:backgroundTint="#9ED2FB"  />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sharegitascreen"
        android:layout_width="match_parent"
        android:background="#D6DDFD"
        android:layout_height="match_parent">

        <LinearLayout



            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:layout_margin="04dp"
            android:elevation="0dp"
            android:background="@drawable/gitashlokborder">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center"
                android:text="श्रीमद् भगवद्गीता"
                android:textColor="#3F51B5"
                android:textSize="44sp"
                android:background="@drawable/gitaheaderbackground"
                android:textStyle="bold" />

            <!-- Sanskrit Shloka -->
            <TextView
                android:id="@+id/sholktext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/gitatextbackground"
                android:padding="8dp"
                android:text="कर्मण्येवाधिकारस्ते मा फलेषु कदाचन।\nमा कर्मफलहेतुर्भूर्मा ते सङ्गोऽस्त्वकर्मणि॥"
                android:textColor="#D32F2F"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <com.google.android.gms.ads.AdView
                android:visibility="gone"
                android:id="@+id/adView6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:adSize="BANNER"
                app:adUnitId="@string/bannerunitGitachapter" />

            <!-- Hindi Translation -->
            <TextView

                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="मैथिलि अनुवाद"
                android:textColor="#3F51B5"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"

                android:id="@+id/descsholk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:text="कर्म करने का ही तुम्हें अधिकार है, उसके फलों पर नहीं।\nकर्मफल के हेतु मत बनो, और न ही कर्म न करने में तुम्हारी आसक्ति हो।"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp" />

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp" />

            <!-- Notes -->
            <TextView

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="व्याख्या"
                android:textColor="#3F51B5"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"

                android:padding="10dp"
                android:id="@+id/shlokdesc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="कर्म करने का ही तुम्हें अधिकार है, उसके फलों पर नहीं।\nकर्मफल के हेतु मत बनो, और न ही कर्म न करने में तुम्हारी आसक्ति हो।"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp" />

            <View

                android:layout_width="match_parent"
                android:layout_height="82dp"

                android:layout_marginVertical="8dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>





</FrameLayout>
