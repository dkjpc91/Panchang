<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chaptername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="१. अर्जुन विषाद योग"
            android:textColor="#3F51B5"


            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/shlokaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            android:padding="4dp"
            android:text="४७ श्लोक"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/chapterdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chaptername"
            android:layout_marginTop="4dp"
            android:text="अर्जुन की मानसिक स्थिति और उनके द्वारा युद्ध न करने के कारणों का वर्णन।"
            android:textColor="#3F51B5"
            android:textSize="18sp" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_below="@id/chapterdesc"
            android:layout_marginVertical="4dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>