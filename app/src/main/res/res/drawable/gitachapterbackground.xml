<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="#FFA726"/> <!-- Orange color when pressed -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient
                android:startColor="#F69F84"
                android:endColor="#EDD606"
                android:angle="270"/> <!-- Gradient from red to orange -->
            <stroke
                android:width="2dp"
                android:color="#F44F1B"/> <!-- Red border -->
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp"/> <!-- Padding inside the button -->
        </shape>
    </item>
</selector>
