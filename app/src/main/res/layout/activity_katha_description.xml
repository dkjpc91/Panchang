<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UI.View.KathaDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="-90dp"
            android:src="@drawable/header"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="-130dp"
            android:padding="27dp"
            android:src="@drawable/splashtxt"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="30dp"
            android:backgroundTint="#E8F1F0"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:id="@+id/kathaImg"
                    android:layout_width="400dp"
                    android:layout_height="180dp"/>

                <TextView
                    android:id="@+id/kathatitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <ScrollView

                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="2dp"
                            android:id="@+id/kathaDesc"
                            android:text="कर्म करने का ही तुम्हें अधिकार है, उसके फलों पर नहीं।\nकर्मफल के हेतु मत बनो, और न ही कर्म न करने में तुम्हारी आसक्ति हो।"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="23sp"/>



                    </ScrollView>

                </androidx.cardview.widget.CardView>






            </LinearLayout>





        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="238dp"
        android:layout_marginRight="24dp"
        app:srcCompat="@drawable/mutespeaker" />


</RelativeLayout>