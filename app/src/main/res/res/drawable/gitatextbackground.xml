<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners  android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"/>
            <solid android:color="#FFA726"/> <!-- Orange color when pressed -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners  android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"/>
            <gradient
                android:startColor="#FFEB3B"
                android:endColor="#FFA726"
                android:angle="270"/> <!-- Gradient from red to orange -->
            <stroke
                android:width="2dp"
                android:color="#FF5722"/> <!-- Red border -->
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp"/> <!-- Padding inside the button -->
        </shape>
    </item>
</selector>
