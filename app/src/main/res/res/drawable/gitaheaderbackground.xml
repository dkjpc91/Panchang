<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="18dp" android:topLeftRadius="18dp"/>
            <solid android:color="#FFA726"/> <!-- Orange color when pressed -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="18dp" android:topLeftRadius="18dp"/>
            <gradient
                android:startColor="#FF5722"
                android:endColor="#FFA726"
                android:angle="270"/> <!-- Gradient from red to orange -->
            <stroke
                android:width="2dp"
                android:color="#FF5722"/> <!-- Red border -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/> <!-- Padding inside the button -->
        </shape>
    </item>
</selector>
